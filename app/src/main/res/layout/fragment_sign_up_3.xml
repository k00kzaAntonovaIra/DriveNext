<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Верхняя панель с кнопкой назад и заголовком -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0" />

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/chevron_left"
            android:contentDescription="Назад" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Создать аккаунт"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Контейнер формы с прокруткой -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <!-- Аватар -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop"/>


            </FrameLayout>

            <!-- Подпись под аватаром -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добавление фотографии поможет владельцам и арендаторам узнать друг друга, когда они будут забирать машину"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="start"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Номер водительского удостоверения -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Номер водительского удостоверения"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/licenseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0000000000"
                    android:paddingVertical="12dp"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Дата выдачи -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата выдачи"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/licenseDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                app:startIconTint="#2A1246"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLicenseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="DD.MM.YYYY"
                    android:paddingVertical="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Загрузка фото водительского удостоверения -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загрузите фото водительского удостоверения"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/btnUploadLicense"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/upload"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Загрузите фото"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

            <!-- Загрузка фото паспорта -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загрузите фото паспорта"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/btnUploadPassport"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/upload"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Загрузите фото"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Текст ошибки для фото -->
            <TextView
                android:id="@+id/photoError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone"
                android:paddingHorizontal="4dp"
                android:paddingVertical="4dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Кнопка Далее -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Далее"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#2A1246"
        app:cornerRadius="8dp" />

</LinearLayout>