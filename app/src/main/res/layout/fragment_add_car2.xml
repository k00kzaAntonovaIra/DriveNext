<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top|center_horizontal"
    android:background="#FFFFFF">

    <!-- Верхняя панель с кнопкой назад и заголовком -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0" />

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/chevron_left"
            android:contentDescription="Назад" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Добавление автомобиля"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Основной контент с полями ввода -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Год выпуска -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Год выпуска"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/yearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Год"
                    android:minHeight="40dp"
                    android:paddingVertical="8dp"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Марка автомобиля -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Марка автомобиля"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/markLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Марка"
                    android:minHeight="40dp"
                    android:paddingVertical="8dp"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Модель автомобиля -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Модель"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/modelLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Модель"
                    android:minHeight="40dp"
                    android:paddingVertical="8dp"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Трансмиссия -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Трансмиссия"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTransmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxBackgroundMode="outline"
                app:endIconDrawable="@drawable/ic_arrow_down"
                app:endIconMode="dropdown_menu"
                android:layout_marginBottom="16dp">

                <AutoCompleteTextView
                    android:id="@+id/actTransmission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Трансмиссия"
                    android:paddingStart="12dp"
                    android:textSize="16sp"
                    android:minHeight="40dp"
                    android:paddingVertical="8dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Пробег -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пробег"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/probeglLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProbeg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Пробег"
                    android:minHeight="40dp"
                    android:paddingVertical="8dp"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Описание автомобиля -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Добавьте описание"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="157dp"
                    android:gravity="top|start"
                    android:hint="Пожалуйста, добавьте дополнительную информацию о вашем автомобиле, которая может быть интересна арендатору. Например, о внутреннем оформлении, мощности и других особенностях вашего автомобиля."
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:paddingVertical="12dp"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Кнопка отправки -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Отправить"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#2A1246"
        app:cornerRadius="8dp"
        android:layout_marginTop="20dp"
        android:enabled="false" />

</LinearLayout>
