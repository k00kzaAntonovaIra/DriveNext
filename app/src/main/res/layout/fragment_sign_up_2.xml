<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Верхняя панель с кнопкой назад и заголовком -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0" />

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/chevron_left"
            android:contentDescription="Назад" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Создать аккаунт"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />

        <!-- Пустой View чтобы кнопка назад не "прилипала" к заголовку -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Контейнер формы с прокруткой -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <!-- Фамилия -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Фамилия"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введите фамилию"
                    android:paddingVertical="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Имя -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Имя"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введите имя"
                    android:paddingVertical="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Отчество -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отчество"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/middleNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введите отчество"
                    android:paddingVertical="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Дата рождения -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата рождения"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/birthDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E0E0E0"
                android:textColorHint="#666666"
                app:startIconTint="#2A1246"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DD.MM.YYYY"
                    android:paddingVertical="12dp"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Пол -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пол"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Мужской"
                    android:textColor="#000000"/>

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Женский"
                    android:textColor="#000000"/>
            </RadioGroup>

            <!-- Текст ошибки для пола -->
            <TextView
                android:id="@+id/genderError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone"
                android:paddingHorizontal="4dp"
                android:paddingVertical="4dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Кнопка Далее -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Далее"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#2A1246"
        app:cornerRadius="8dp"
        android:layout_marginTop="20dp" />
</LinearLayout>
