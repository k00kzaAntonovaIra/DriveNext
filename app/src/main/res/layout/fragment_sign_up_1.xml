<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top|center_horizontal"
    android:background="#FFFFFF">

    <!-- Верхняя панель с кнопкой назад и заголовком -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0" />

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/chevron_left"
            android:contentDescription="Назад" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Создать аккаунт"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />

        <!-- Пустой View чтобы кнопка назад не "прилипала" к заголовку -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Контейнер для полей ввода и чекбокса — центрируем по вертикали -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Электронная почта"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#E0E0E0"
            android:textColorHint="#666666"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите электронную почту"
                android:paddingVertical="12dp"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Придумайте пароль"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#E0E0E0"
            android:textColorHint="#666666"
            app:endIconMode="password_toggle"
            app:endIconTint="#666666"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Придумайте пароль"
                android:paddingVertical="12dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Повторите пароль"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#E0E0E0"
            android:textColorHint="#666666"
            app:endIconMode="password_toggle"
            app:endIconTint="#666666"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Повторите пароль"
                android:paddingVertical="12dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/chkAgree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Я согласен с условиями обслуживания и политикой конфиденциальности"
            android:textSize="14sp"
            android:textColor="#000000"
            app:buttonTint="#2A1246"
            android:layout_marginBottom="8dp"/>

        <!-- Текст ошибки для чекбокса -->
        <TextView
            android:id="@+id/chkError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="12sp"
            android:visibility="invisible"
            android:paddingHorizontal="4dp"
            android:paddingVertical="4dp"/>
    </LinearLayout>

    <!-- Кнопка Далее — прижата к низу -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Далее"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#2A1246"
        app:cornerRadius="8dp"
        android:layout_marginTop="20dp" />

</LinearLayout>

